@page "/counter"
@inject IStringLocalizer<Counter> localizer

<PageTitle>@localizer["Title"]</PageTitle>

<MudText Typo="Typo.h1">
    @localizer["Title"]
</MudText>

<MudText Typo="Typo.body1">
    @localizer["CurrentCountMsg", @currentCount]
</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">
    @localizer["ClickMeBtn"]
</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
